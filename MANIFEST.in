# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md

# Include package data
recursive-include src/port_cli *.py
recursive-include src/port_cli py.typed

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude tests and dev files
prune tests
prune docs
exclude .gitignore
exclude .coveragerc
exclude pytest.ini
exclude mypy.ini
exclude ruff.toml

