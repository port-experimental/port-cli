# Port CLI Environment Variables
# Copy this file to .env and fill in your values

# Port API Credentials
PORT_CLIENT_ID=your-client-id-here
PORT_CLIENT_SECRET=your-client-secret-here

# Port API URL (choose based on your region)
# US: https://api.us.port.io/v1
# EU: https://api.getport.io/v1
PORT_API_URL=https://api.getport.io/v1

# Optional: Default organization name
PORT_DEFAULT_ORG=production

# Optional: Config file path (defaults to ~/.port/config.yaml)
# PORT_CONFIG_FILE=/path/to/config.yaml

# Optional: Enable debug mode
# PORT_DEBUG=true
